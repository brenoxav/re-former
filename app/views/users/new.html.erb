<%= form_for @user, url: { action: "create" } do |u| %>

  <%= label_tag(:username, "Username:") %>
  <%= u.text_field :username %>

  <%= label_tag(:email, "Email:") %>
  <%= u.text_field :email, type: "email" %>

  <%= label_tag(:password, "Password:") %>
  <%= u.text_field :password, type: "password" %>

  <%= u.submit "Submit" %>

<% end %>
